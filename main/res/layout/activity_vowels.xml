<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VowelsActivity">
    <RelativeLayout
        android:id="@+id/characters_title_vowels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/info_study_characters_vowels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/character_column"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:paddingStart="20dp"
            android:paddingBottom="5dp"
            />

        <TextView
            android:id="@+id/info_study_transcriptions_vowels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transcription_column"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:paddingEnd="25dp"
            android:paddingBottom="5dp"
            />

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/character_study_element_divider_vowels"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue"
        android:layout_below="@+id/characters_title_vowels">
    </LinearLayout>

    <ListView
        android:id="@+id/character_list_vowels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/character_study_element_divider_vowels"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="3dp"
        android:divider="@color/red"
        android:dividerHeight="1sp">

    </ListView>
</RelativeLayout>